{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug EOG MODIS Download",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run.py",
      "cwd": "${workspaceFolder}",
      "args": [
        "index",
        "--config", "${workspaceFolder}/orchestration/configs/data.yaml",
        "--source", "glass_modis",
        "--debug"
      ],
      "console": "integratedTerminal",
    },
    {
      "name": "Debug EOG DVNL Download",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run.py",
      "cwd": "${workspaceFolder}",
      "args": [
        "validate_download",
        "--config", "${workspaceFolder}/orchestration/configs/data.yaml",
        "--source", "eog_dvnl",
        "--debug"
      ],
      "console": "integratedTerminal",
    },
  ]
}