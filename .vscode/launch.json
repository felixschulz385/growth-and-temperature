{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug GLASS MODIS Download",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run.py",
      "cwd": "${workspaceFolder}",
      "args": [
        "index",
        "--config", "${workspaceFolder}/orchestration/configs/data.yaml",
        "--source", "glass_modis",
        "--debug"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "showReturnValue": true
    },
    {
      "name": "Debug EOG DMSP Download",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run.py",
      "cwd": "${workspaceFolder}",
      "args": [
        "download",
        "--config", "${workspaceFolder}/orchestration/configs/data.yaml",
        "--source", "eog_dmsp",
        "--debug"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "showReturnValue": true
    },
    {
      "name": "Debug EOG DMSP Pipeline",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/download_pipeline.py",
      "cwd": "${workspaceFolder}",
      "args": [
        "--config", "${workspaceFolder}/orchestration/configs/data.yaml",
        "--source", "eog_dmsp",
        "--debug"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "showReturnValue": true
    },
  ]
}