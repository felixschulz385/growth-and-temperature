{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug GLASS MODIS Download",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run.py",
      "cwd": "${workspaceFolder}",
      "args": [
        "download",
        "--config", "${workspaceFolder}/orchestration/configs/debug-unified-glass-modis.yaml",
        "--source", "glass",
        "--debug"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "showReturnValue": true,
      "exceptionBreakpointFilters": [
        {"filter": "raised", "label": "Raised Exceptions", "default": true},
        {"filter": "uncaught", "label": "Uncaught Exceptions", "default": true}
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "GCP_PROJECT_ID": "ee-growthandheat",
        "HPC_TARGET": "your-username@your-hpc-server:/path/to/data"
      }
    },
    {
      "name": "Debug EOG DVNL Download",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run.py",
      "cwd": "${workspaceFolder}",
      "args": [
        "validate_download",
        "--config", "${workspaceFolder}/orchestration/configs/data.yaml",
        "--source", "eog_dvnl",
        "--debug"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "showReturnValue": true
    },
  ]
}