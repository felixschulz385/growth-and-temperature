{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug GLASS AVHRR Preprocessing",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/gnt/data/preprocess/main.py",
      "args": ["${workspaceFolder}/orchestration/configs/debug-glass-avhrr-preprocess.yml"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "showReturnValue": true,
      "exceptionBreakpointFilters": [
        {"filter": "raised", "label": "Raised Exceptions", "default": true},
        {"filter": "uncaught", "label": "Uncaught Exceptions", "default": true}
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "GCP_PROJECT_ID": "ee-growthandheat"
      }
    },
